{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.{css,scss,less}",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.{json,yaml,yml}",
      "options": {
        "singleQuote": false
      }
    }
  ]
}